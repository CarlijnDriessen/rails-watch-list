<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.movie.title %> â€¢ <%= bookmark.movie.rating %></h3>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete", bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>


<div class="d-flex flex-column justify-content-center mx-auto mt-5 w-25">
  <h2>Add movie</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, prompt: "Choose a Movie" %>
    <%= f.input :comment %>
    <%= f.button :submit %>
  <% end %>
</div>

<h2>Reviews</h2>
<% @list.reviews.each do |review| %>
  <p><%= review.rating %></p>
  <p><%= review.comment %></p>
<% end %>


<div class="d-flex flex-column justify-content-center mx-auto mt-5 w-25">
  <h2>Add review</h2>
  <%= simple_form_for [@list, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <%= f.button :submit %>
  <% end %>
</div>
